<script type="text/javascript">

    $('#password1, #password2').on('keyup', function () {
      if ($('#password1').val() == $('#password2').val()) {
        $('#message').html('Matching').css('color', 'green');

      } else
        $('#message').html('Not Matching').css('color', 'red');

    });

</script>
