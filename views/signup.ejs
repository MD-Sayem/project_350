  <body>
    <div class="wrapper">
      <div class="section">
        <!-- header section -->
        <div class="header headerTwo">
          <h1 class="index-head">Admin Panel</h1>
          <form class="" action="/admin-logout" method="post">
            <button type="submit" class="logOut-btn admin-btn">
              Log out
            </button>
          </form>
        </div>
        <!-- log in section -->
        <div class="log-in userSignUp">
          <form class="" action="/register" method="post">
            <div class="log-in-box">
              <h3>New User Sign Up</h3>
              <p>Username</p>
              <input name="username" type="text" placeholder="Enter username" autofocus required>
              <!-- required -->
              <p>Email</p>
              <input name="email"type="text" placeholder="Enter email"  required>
              <!-- required -->
              <p>Password</p>
              <input id='password1'name="password" type="password" placeholder="Enter password" required/>

              <p>Confirm Password</p>
              <input id ='password2'name="password2" type="password" placeholder="Enter password" required/>
              <span id='message'></span>
              <div class="log-in-submit">
                <button type="submit" class="submit-btn">
                      Assign User
                </button>

              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="sidebar">
        <p class="copy-right-p">COPYRIGHT © SUST CSE &nbsp2018-19</p>
