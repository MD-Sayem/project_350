            <a href="/garbage-words">
              <span class="item">Garbage Words</span>
            </a>
          </li>
          <li>
            <a href="/stat">
              <span class="item">User Stats</span>
            </a>
          </li>
          <li class="hoverItem">
            <a href="/register">
              <span class="item">Assign New User</span>
            </a>
          </li>
          <li>
            <a href="/activeDeactive">
              <span class="item">Activate/Deactivate User</span>
            </a>
          </li>
        </ul>
        </div>

    </div>

    <script
