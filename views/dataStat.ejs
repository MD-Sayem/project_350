        <h4 style="margin-top: 0px; text-align: center">
          Here is current status of our database
        </h4>

        <table class="customers adminTable">
            <%let com=0; let incom=0; let skip=0; let gerb=0; let cnt=0%>
            <%for(i=0; i<4; i++){%>
            <%if(stat[i]!=null){ %>
             <% if(stat[i]._id==0){incom=stat[i].count; cnt+=incom}%>
             <% if(stat[i]._id==1){com=stat[i].count; cnt+=com}%>
             <% if(stat[i]._id==2){skip=stat[i].count; cnt+=skip}%>
             <% if(stat[i]._id==3){gerb=stat[i].count; cnt+=gerb}%>
            <%}}%>
            <!-- (10.8).toFixed(2);  -->
          <tr>
            <th style="text-align: center">Total Words</th>
            <th style="text-align: center">Completed (<%-(com/cnt*100).toFixed(2)%>%)</th>
            <th style="text-align: center">Incompleted (<%-(incom/cnt*100).toFixed(2)%>%)</th>
            <th style="text-align: center">Skipped (<%-(skip/cnt*100).toFixed(2)%>%)</th>
            <th style="text-align: center">Garbage (<%-(gerb/cnt*100).toFixed(2)%>%)</th>
          </tr>
          <tr>
            <td><%-cnt%></td>
            <td><%-com%></td>
            <td><%-incom%></td>
            <td><%-skip%></td>
            <td><%-gerb%></td>
          </tr>

          <!-- example -->
        </table>
