<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet" href="styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="wrapper">


    <div class="section">
      <div class="header headerTwo">
        <h1 class="index-head">Admin Panel</h1>

        <form class="" action="/download" method="post">
          <button
            name='information'
            value=<%-st%>
            class="admin-btn profile-btn"
          >
            Download Info
          </button>
        </form>

        <form class="" action="/admin-logout" method="post">
          <button type="submit" class="logOut-btn admin-btn">
            Log out
          </button>
        </form>
      </div>
      <div class="admin-main">
        <!-- <div class="admin-query">
          <p style="text-align: center">
            Please enter the name of the user you would like to see :
          </p>
          <div class="admin-query-input">
            <input class="num-one" type="text" />
          </div>
          <div class="enter-btn">
            <button class="enter-btn-button" onclick="location.href='/admin';">Enter</button>
          </div>
        </div> -->
        <h4 style="margin-top: 0px; text-align: center">
          Here is a list of all the users:
        </h4>

        <table class="customers adminTable">
          <tr>
            <th style="text-align: center">User No.</th>
            <th style="text-align: center">User Name</th>
            <th style="text-align: center">Total Words</th>
            <th style="text-align: center">Total Hours</th>
            <th style="text-align: center">Total Days</th>
            <th style="text-align: center">Date Started</th>
            <th style="text-align: center">User Stats</th>
          </tr>
          <% let i=0%>
          <% st.forEach(function(user){ %>
            <% let date=user.joined.getDate() + "-" + (parseInt( user.joined.getMonth() )+parseInt('1'))+ "-" +user.joined.getFullYear()%>


          <form class="" action="/stat" method="post">

            <tr>
              <td><%-++i%></td>
              <td><%-user._id%></td>
              <td><%-user.count%></td>
              <td><%-user.totalHours%></td>
              <td><%-user.totalDays%></td>
              <td><%-date%></td>
              <td>
                <button
                    type="submit"
                    class="edit-btn"
                    name="user"
                    value=<%-user._id%>
                >
                  Stats
                </button>
              </td>
            </tr>
            <%});%>
          </form>
          <!-- example -->
        </table>
      </div>
      <%- include('sidebar.ejs') %>
    </div>
      <div class="copy-right">
        <p class="copy-right-p">COPYRIGHT Â© SUST CSE &nbsp2018-19</p>
      </div>
    </div>
