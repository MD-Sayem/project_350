<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bangla Stemmer</title>
    <link rel="stylesheet" href="styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" />
  </head>
  <body>
    <div class="section">
      <!-- header section -->
      <div class="header headerTwo">
        <h1 class="index-head">Bangla Stemmer</h1>
        <button onclick="location.href = '/admin-login';" class="admin-btn">
          Admin panel
        </button>
      </div>
      <!-- log in section -->
      <div class="log-in">
      <form class="" action="/login" method="post">
        <h3 class="log-in-brief">Please log in to proceed</h3>
        <div class="log-in-box">
          <h3>Log In</h3>
          <p>Username</p>
          <input name="username" type="text" placeholder="Enter username" autofocus required>
          <!-- required -->
          <p>Password</p>
          <input name="password" type="password" placeholder="Enter password" required/>
          <div class="log-in-submit">
            <!-- <button
              onclick="location.href='dataEntryScreen.html';"
              class="submit-btn"
            >
              Log In
            </button> -->
            <button type="submit" class="submit-btn">
                  Log In
            </button>

          </div>
            <p style="text-align:center; margin-bottom: 0px;">
              Don't have an account?<a href="/register">Sign Up</a>
            </p>


        </div>
      </form>
      </div>
      <!-- copyright section -->
      <div class="copy-right">
        <p class="copy-right-p">COPYRIGHT Â© SUST CSE &nbsp2018-19</p>
      </div>
    </div>
    <script src="script.js"></script>
  </body>
</html>
